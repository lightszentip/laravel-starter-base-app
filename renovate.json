{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranchPatterns": [
    "main",
    "jetstream",
    "filamentphp"
  ],
  "extends": [
    "config:best-practices",
    ":enableVulnerabilityAlertsWithLabel(security)",
    "group:recommended",
    ":automergePatch"
  ],
  "separateMajorMinor": true,
  "labels": [
    "dependencies"
  ],
  "separateMultipleMajor": true,
  "separateMultipleMinor": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        "require-dev"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "groupName": "devDependencies (non-major)"
    },
    {
      "matchDepTypes": [
        "devDependencies",
        "require-dev"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "devDependencies (major)"
    },
    {
      "matchSourceUrls": [
        "https://github.com/**"
      ],
      "prBodyDefinitions": {
        "OpenSSF": "[![OpenSSF Scorecard](https://api.securityscorecards.dev/projects/github.com/{{sourceRepo}}/badge)](https://securityscorecards.dev/viewer/?uri=github.com/{{sourceRepo}})"
      },
      "prBodyColumns": [
        "Package",
        "Type",
        "Update",
        "Change",
        "Pending",
        "OpenSSF"
      ]
    },
    {
      "groupName": "all non-minor and non major dependencies",
      "groupSlug": "all-patch",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
